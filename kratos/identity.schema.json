{
  "$id": "https://schemas.ory.sh/presets/kratos/quickstart/email-password/identity.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "title": "Email address",
          "minLength": 3,
          "ory.sh/kratos": {
            "verification": {
              "via": "email"
            },
            "recovery": {
              "via": "email"
            },
            "credentials": {
              "webauthn": {
                "identifier": true
              }
            }
          }
        },
        "name": {
          "type": "string",
          "title": "Full name",
          "minLength": 2,
          "maxLength": 75
        }
      },
      "required": ["email", "name"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
